function response(room, msg, sender, isGroupChat, replier, imageDB, packageName) {
  if(room="수원하이텍고등학교 신입생 질문방"){
   if(msg=="자주 하는 질문"){
     replier.reply(SHT_Q.join("\n"))
     replier.reply("//(슬래시*2)에 질문 앞 번호를 붙여 선택할 수 있습니다.(ex. //1)")
   }
   if(msg.indexOf("//")==0){
    N=msg.substring(2,3)
    replier.reply(SHT_A[N-1])
   }
  }
}

